<div class="container-fluid">
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= user.photo ? user.photo : 'https://upload.wikimedia.org/wikipedia/commons/a/ac/Default_pfp.jpg' %>" alt="<%= user.name %>" class="card-img" style="width: 40%">
      </div>
      <div class="col-md-4">
        <div class="card-body">
          <h2 class="card-title fw-bold" style="color: black"><%= user.name %></h2>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card-body">
          <p class="card-title mt-3 fw-bold" style="color: black">Number of posts: <%= user.posts_counter %></p>
        </div>
      </div>
    </div>
  </div>
</div>


